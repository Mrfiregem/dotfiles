#!/usr/bin/env fish
# Update path in wpaperd config

if not set -q imv_current_file
  echo "Run this using imv" 1>&2
  exit 1
end

if test -d $imv_current_file
    set dirname $imv_current_file
else
    set dirname (string split -f 1 -m 1 -r '/' $imv_current_file)
end

dasel put string -f $XDG_CONFIG_HOME/wpaperd/output.conf -p toml \
    '.default.path' $dirname
